{
    "name": "server",
    "module": "dist/src/server.js",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/server.ts",
        "build": "tsc",
        "start": "node dist/src/server.js",
        "prod:install": "npm ci",
        "prod:build": "npm run build",
        "prod:start": "npm start",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "http-status-codes": "^2.3.0",
        "mongoose": "^8.19.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/bun": "latest",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/eslint": "^9.6.1",
        "@types/express": "^5.0.4",
        "@types/node": "^24.9.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.46.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
